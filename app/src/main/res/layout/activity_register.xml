<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#773A7E"
    tools:context=".Activity.RegisterActivity">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="@drawable/white_back"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="First Name"
            android:textColor="#2f3363"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="18sp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edtFirst"
            android:hint="Enter first name"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:textSize="16sp"
            android:padding="8dp"
            android:textColor="#a2a4b5"
            android:textColorHint="#a2a4b5"
            />


        <TextView
            android:text="Last Name"
            android:textColor="#2f3363"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="18sp"
            android:layout_marginStart="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edtLast"
            android:hint="Enter last name"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:textSize="16sp"
            android:padding="8dp"
            android:textColor="#a2a4b5"
            android:textColorHint="#a2a4b5"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Email"
            android:textColor="#2f3363"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edtEmail"
            android:hint="Enter email"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:textSize="16sp"
            android:padding="8dp"
            android:textColor="#a2a4b5"
            android:textColorHint="#a2a4b5"
            />

        <TextView
            android:text="Phone number"
            android:textColor="#2f3363"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="18sp"
            android:layout_marginStart="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:prefixText="+91"
            app:prefixTextColor="#a2a4b5">

            <EditText
                android:id="@+id/edtPhone"
                android:imeOptions="actionNext"
                android:hint="Enter 10-digit phone number"
                android:inputType="phone"
                android:maxLength="10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:textColor="#a2a4b5"
                android:textColorHint="#a2a4b5" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:text="Password"
            android:textColor="#2f3363"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="18sp"
            android:layout_marginStart="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edtPassword"
            android:hint="Enter password"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:textSize="16sp"
            android:padding="8dp"
            android:textColor="#a2a4b5"
            android:textColorHint="#a2a4b5"
            />

        <TextView
            android:text="Confirm password."
            android:textColor="#2f3363"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="18sp"
            android:layout_marginStart="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edtCnfPassword"
            android:hint="Enter confirm password"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:textSize="16sp"
            android:padding="8dp"
            android:textColor="#a2a4b5"
            android:textColorHint="#a2a4b5"
            />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/pathRelative"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/circle"
        android:layout_below="@id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/layers_color"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <TextView
        android:textColor="@color/white"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="33sp"
        android:text="Create\nAccount"
        android:layout_marginTop="32dp"
        android:layout_below="@id/linear"

        android:layout_toRightOf="@id/pathRelative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRegister"
        android:background="@drawable/blue_back"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        style="@android:style/Widget.Button"
        android:text="Register"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>